---
import AstroIc from './icons/AstroIc.astro'
import TailwindCss from './icons/TailWindCss.astro'
import HTML from './icons/HTML.astro'
import CSS from './icons/CSS.astro'
import JavaScript from './icons/JavaScript.astro'
import LinkIc from './icons/Link.astro'
import Github2Ic from './icons/Github2.astro'

const TAGS = {
    ASTRO: {
        name: 'Astro',
        class: 'bg-black text-white',
        icon: AstroIc,
        
    },

    TAILWIND:{
        name: 'TailwindCSS',
        class: 'bg-black text-white',
        icon: TailwindCss,
    },

    HTML: {
        name: 'HTML',
        class: 'bg-black text-white',
        icon: HTML,
    },

    CSS: {
        name: 'CSS',
        class: 'bg-black text-white',
        icon: CSS,
    },

    JAVASCRIPT: {
        name: 'JavaScript',
        class:'bg-black text-white',
        icon: JavaScript,
    }

}

const PROJECTS = [
    {
        title: "Área Legal Ideart Asesores",
        description: " La página web del área legal de Ideart Asesores, donde se pueden visualizar los integrantes y las áreas de práctica. ",
        image: "/projects/ImgProyArLeMejo.webp",
        link: "https://arealegalideartasesores.netlify.app/",
        github: "https://github.com/Josereyes12/AreaLegalIdeart",
        tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT]
    }
]
---
{
    <article class="mb-8">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <>
        <h3 class="text-2xl font-semibold text-orange-500 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex flex-wrap gap-2 mb-4">
          {tags.map((tag) => (
            <li>
              <span class={`flex items-center gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                <tag.icon class="h-4 w-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <a href={link} target="_blank">
        <img class="rounded shadow-2xl shadow-white/10 w-full md:w-auto" src={image} alt={`Captura de pantalla del proyecto ${title}`} />
        </a>
        <div class="flex justify-center mt-4 gap-4">
        <a href={link} target="_blank" class="inline-flex items-center justify-center gap-2 px-3 py-2 text-base text-white transition bg-gray-800 border border-gray-600 rounded-xl hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
          <LinkIc class="size-6 mr-2" /> Ver Proyecto
        </a>
        <a href={github} target="_blank" class="inline-flex items-center justify-center gap-2 px-3 py-2 text-base text-white transition bg-gray-800 border border-gray-600 rounded-xl hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
          <Github2Ic class="size-6 mr-2" /> GitHub
        </a>
      </div>
    </>
    ))
  }
</article>
}