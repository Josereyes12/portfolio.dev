---
import AstroIc from './icons/AstroIc.astro'
import TailwindCss from './icons/TailWindCss.astro'
import HTML from './icons/HTML.astro'
import CSS from './icons/CSS.astro'
import JavaScript from './icons/JavaScript.astro'

const TAGS = {
    ASTRO: {
        name: 'Astro',
        class: 'bg-black text-white',
        icon: AstroIc,
        
    },

    TAILWIND:{
        name: 'TailwindCSS',
        class: 'bg-black text-white',
        icon: TailwindCss,
    },

    HTML: {
        name: 'HTML',
        class: 'bg-black text-white',
        icon: HTML,
    },

    CSS: {
        name: 'Astro',
        class: 'bg-black text-white',
        icon: CSS,
    },

    JAVASCRIPT: {
        name: 'JavaScript',
        class:'bg-black text-white',
        icon: JavaScript,
    }

}

const PROJECTS = [
    {
        title: "Área Legal Ideart Asesores",
        description: " La página web del área legal de Ideart Asesores, donde se pueden visualizar los integrantes y las áreas de práctica ",
        link: "https://dle.rae.es/prueba",
        gitHub: "https://github.com/",
        image: "/projects/ImgProyArLe.webp",
        tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT]
    }
]
---
{
    PROJECTS.map(({ image, title, description, tags}) => (
        <article>
            <h3 class="text-2xl font-semibold text-orange-500 mb-2 " >{title}</h3>
            <p class="text-lg mb-4 text-pretty" >{description}</p>
            <ul class="flex gap-x-2 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                        <tag.icon class="size-4" />
                        {tag.name}  
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`} />
        </article>
      )
    )   
}