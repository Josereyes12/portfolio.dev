---
interface Props {
  title: string
  company: string
  description: string
  date: string
  
}

const { title, company, description, date} = Astro.props
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
 <h3 class="text-xl font-bold text-orange-500 dark:text-white">{title}</h3>
 <time class="mb-1 text-sm font-normal leading-none text-white">{date}</time>
 <h4 class="mb-4 text-base font-normal text-red-400">{company}</h4>
 <p class="mb-4 text-base font-normal text-gray-200 text-pretty">{description}</p>